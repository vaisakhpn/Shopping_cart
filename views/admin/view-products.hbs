<section>
    
    <div class="container">
        <div class="row mt-2">
            <a href="/admin/add-product" class="btn btn-success ml-auto">Add product</a>
        </div>
         <table class="table mt-3 p-10 mt-5" id="adminTable">
  <thead>
    <tr>
      <th scope="col">No</th>
      <th scope="col">Title</th>
      <th scope="col">Category</th>
      <th scope="col">Description</th>
      <th scope="col">Image</th>
    </tr>
  </thead>
  <tbody>
    {{#each products}}
    <tr>
      <th scope="row">{{@index}}</th>
      <td>{{this.Name}}</td>
      <td>{{this.Category}}</td>
      <td>{{this.Description}}</td>
      <td><img style="width: 50px;height:50px" src="/product-image/{{this._id}}.jpg" alt=""></td>
    </tr>
    {{/each}}
  </tbody>
</table>
    </div>
</section>